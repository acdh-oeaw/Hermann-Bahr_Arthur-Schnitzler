         <div type="address"> 
            <address> 
               <addrLine>Herrn D<hi rend="superscript">r</hi> Arthur Schnitzler</addrLine> 
               <addrLine> 
                  <placeName key="pmb59">Wien IX</placeName> 
               </addrLine> 
               <addrLine> 
                  <placeName key="pmb397">Frankgasse</placeName> 1.</addrLine> 
