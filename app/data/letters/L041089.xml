               <handShift scribe="pmb2173"/>(<anchor type="textConst" xml:id="TL089-1">Dies</anchor> soll <hi rend="latintype"> 
                  <rs type="work" key="pmb30009">Hamlet</rs> sein.</hi>)</p> 
            <closer> 
               <hi rend="latintype">Herzliche Erwiderung Ihrer lieben Grüsse!</hi> 
               <space unit="chars" quantity="1"/> 
               <signed>Olga Schnitzler.</signed> 
            </closer> 
