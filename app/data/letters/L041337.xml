            <address>
               <addrLine>Herrn D<hi rend="superscript">r</hi> Arthur Schnitzler</addrLine>
               <addrLine>
                  <hi rend="underline" n="1">
                     <rs type="place" ref="pmb68">Wien XVIII</rs>
                  </hi>
               </addrLine>
               <addrLine>
                  <rs type="place" ref="pmb150">Sternwartestraße 71</rs>
