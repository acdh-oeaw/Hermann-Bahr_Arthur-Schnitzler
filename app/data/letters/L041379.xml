      <body>
         <div type="address">
            <address>
               <addrLine>
                  <hi rend="latintype">Dr. Arthur Schnitzler</hi>, <rs type="place" ref="pmb397">Wien, IX. Frankgasse 1.</rs>
               </addrLine>
            </address>
            <address>
               <addrLine>
                  <hi rend="latintype">
                     <hi rend="underline" n="1">
                        <rs type="place" ref="pmb40306">Italien</rs>
                     </hi>
                  </hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">Dr. Richard Beer Hofmann</hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <hi rend="underline" n="1">
                        <rs type="place" ref="pmb595">Neapel</rs>
                     </hi>
                  </hi>
               </addrLine>
               <addrLine>
