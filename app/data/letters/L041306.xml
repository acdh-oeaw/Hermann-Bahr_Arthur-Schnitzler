      <body> 
         <div type="address"> 
            <address> 
               <addrLine>Herrn D<hi rend="superscript">r</hi> Artur Schnitzler</addrLine> 
               <addrLine> 
                  <placeName key="pmb68">Wien XVIII</placeName> 
               </addrLine> 
               <addrLine> 
                  <placeName key="pmb133">Spöttelgasse 7</placeName> 
