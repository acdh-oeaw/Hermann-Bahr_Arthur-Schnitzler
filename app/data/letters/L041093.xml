         <div type="address"> 
            <address> 
               <addrLine>Herrn <hi rend="latintype">Hermann Bahr,</hi> 
               </addrLine> 
               <addrLine> 
                  <hi rend="latintype"> 
                     <hi rend="underline" n="1"> 
                        <placeName key="pmb165">Wien Ob St Veit</placeName> 
                     </hi> 
