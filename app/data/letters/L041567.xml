      <body> 
         <div type="address"> 
            <address> 
               <addrLine>Herrn Dr. Arthur Schnitzler</addrLine> 
               <addrLine> 
                  <placeName key="pmb68">Wien XVIII</placeName> 
               </addrLine> 
