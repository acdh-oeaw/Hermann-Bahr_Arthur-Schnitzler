      <body> 
         <div type="address"> 
            <address> 
               <addrLine>Herrn Dr. <hi rend="latintype">Richard Beer-Hofmann</hi> 
               </addrLine> 
               <addrLine> 
                  <hi rend="latintype"> 
                     <placeName key="pmb759"> 
                        <settlement>Schönberg im Stubaithal</settlement> 
