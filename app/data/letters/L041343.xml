            <address>
               <addrLine>Herrn</addrLine>
               <addrLine>D<hi rend="superscript">r</hi> Arthur Schnitzler</addrLine>
               <addrLine>
                  <rs type="place" ref="pmb68">Wien XVIII</rs>
               </addrLine>
               <addrLine>
                  <rs type="place" ref="pmb150">Sternwartestr 71</rs>
