         <div type="address"> 
            <address> 
               <addrLine>Herrn D<hi rend="superscript">r</hi> Arthur Schnitzler</addrLine> 
               <addrLine> 
                  <placeName key="pmb68">Wien XVIII</placeName> 
               </addrLine> 
               <addrLine> 
